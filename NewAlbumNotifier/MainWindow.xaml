<Window x:Class="NewAlbumNotifer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400.057" Width="525" Initialized="Window_Initialized_1">
    <Grid>
        <ListBox x:Name="lbArtist" HorizontalAlignment="Left" Height="100" Margin="10,58,0,0" VerticalAlignment="Top" Width="194" SelectionChanged="lbArtist_SelectionChanged"/>
        <ListBox x:Name="lbAlbum" HorizontalAlignment="Left" Height="100" Margin="240,58,0,0" VerticalAlignment="Top" Width="252" RenderTransformOrigin="0.366,-0.234" SelectionChanged="lbAlbum_SelectionChanged"/>
        <ListBox x:Name="lbArtistDetails" HorizontalAlignment="Left" Height="185" Margin="10,174,0,0" VerticalAlignment="Top" Width="194"/>
        <ListBox x:Name="lbAlbumDetails" HorizontalAlignment="Left" Height="185" Margin="240,174,0,0" VerticalAlignment="Top" Width="252"/>
        <TextBox x:Name="txtArtist" HorizontalAlignment="Left" Height="23" Margin="10,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="302" ToolTip="Artist name to search for" KeyDown="txtArtist_KeyDown"/>

    </Grid>
</Window>
